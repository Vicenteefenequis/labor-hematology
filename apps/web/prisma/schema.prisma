generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  Report        Report[]
}

model Animal {
  id           String    @id @default(cuid())
  name         String
  trackingMark String?
  markType     Mark      @default(UNMARKED)
  age          Age       @default(ADULT)
  gender       Gender    @default(UNDEFINED)
  createdAt    DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @db.Timestamptz(6)
  deletedAt    DateTime? @db.Timestamptz(6)

  speciesId String
  species   Species @relation(fields: [speciesId], references: [id])

  @@unique([id, trackingMark])
  @@index([id])
  @@index([updatedAt])
}

enum Gender {
  MALE
  FEMALE
  UNDEFINED
}

enum Mark {
  MICROCHIP
  WASHER
  UNMARKED
}

model Species {
  id             String         @id @default(cuid())
  commonName     String?
  classification Classification
  scientificName String
  createdAt      DateTime       @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime       @default(now()) @db.Timestamptz(6)
  deletedAt      DateTime?      @db.Timestamptz(6)
  Reference      Reference[]
  Animal         Animal[]
  Report         Report[]

  @@index([id])
  @@index([commonName])
  @@index([scientificName])
}

enum Classification {
  BIRD
  REPTILE
  MAMMAL
}

model Reference {
  id        String    @id @default(cuid())
  specie    Species   @relation(fields: [specieId], references: [id])
  specieId  String
  gender    Gender
  age       Age       @default(ADULT)
  examType  String
  values    Json?
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

enum Age {
  CUB
  YOUNG
  ADULT
  ELDERLY
}

model Report {
  id        String    @id @default(cuid())
  gender    Gender
  age       Age       @default(ADULT)
  examType  String
  values    Json?
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)

  specieId String
  specie   Species @relation(fields: [specieId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
